page {
  height: 100%;
}

.home-item {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-content: center;
  padding: 0 48rpx 0 48rpx;
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  background: #fff;
  box-sizing: border-box;
}

.home-item:after {
  content: '';
  display: inline-block;
  position: absolute;
  bottom: 0;
  left: 48rpx;
  right: 48rpx;
  height: 2rpx;
  background: #ccc;
}

.item-title {
  width: 50%;
  font-size: 32rpx;
  font-weight: bold;
  color: #222;
  text-align: left;
}

.item-desc {
  width: 70%;  
  font-size: 28rpx;
  color: #555;
  text-align: right;  
}

.footer-btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #3164FF;
  box-shadow:0rpx 8rpx 20rpx 0rpx rgba(80,104,235,0.3);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
