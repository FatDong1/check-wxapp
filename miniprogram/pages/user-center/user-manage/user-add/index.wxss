/* miniprogram/pages/user-center/login/index.wxss */
.loginPage {
  padding: 48rpx;
}

view {
    box-sizing: border-box;
}

.section {
    height: 110rpx;
    box-sizing: border-box;
}

.noPadding {
    padding: 0;
}

.inputSection {
    border-bottom: 1rpx solid #ddd;
    display: flex;
    align-items: center;
}

input {
    width: 100%;
    height: 100%;
    line-height: 100%;
    border: none;
    outline: none;
    font-size: 30rpx;
    padding-left: 28rpx;
    box-sizing: border-box;
}

input::-webkit-input-placeholder {
    color: #ddd;
}

.inputIcon {
    display: inline-block;
    width: 44rpx;
    height: 44rpx;
    background-size: cover;
}

.validInput {
    width: 60%;
    float: left;
}

.faiscoLoginBtn {
    margin-top: 48rpx;
    margin-bottom: 34rpx;  
    width: 100%;
    height: 94rpx;
    line-height: 94rpx;
    background-color: #3164ff;
    color: #fff;
    border-radius: 6rpx;
    font-size: 32rpx;
    box-shadow:0rpx 8rpx 20rpx 0rpx rgba(80,104,235,0.3);
}

.accountType {
    color: #666;
    font-size: 28rpx;
    margin-top: 10rpx;
    display: block;
}

.actionType {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.success-tip {
  text-align: center;
}

.success-tip icon {
  display: inline-block;
  margin: 80rpx auto 20rpx;
  width: 120rpx;
  height: 120rpx;
  background-size: cover;
}

.success-text {
    margin: 10rpx 0;
    font-size:28rpx;
    color:#888;
    text-align: center;
}

.back-btn {
    margin-top: 90rpx;
    margin-bottom: 34rpx;
    margin-left: 70rpx;
    margin-right: 70rpx;      
    height: 94rpx;
    line-height: 94rpx;
    background-color: #3164ff;
    color: #fff;
    border-radius: 6rpx;
    font-size: 32rpx;
    box-sizing: border-box;
    box-shadow:0rpx 8rpx 20rpx 0rpx rgba(80,104,235,0.3);
}