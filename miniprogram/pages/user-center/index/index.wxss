.user-center {
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-size:100% 286rpx;      
}

.user-center-info {
    display: flex;
    padding: 34rpx 0 75rpx;
}

.user-image {
    margin-left: 48rpx;
    margin-right: 44rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
}

.other-login-image {
    width: 100%;
    height: 100%;
    background-size: cover;
}

.user-info {
    border-radius: 6rpx;
    background-size: cover;
}

.user-account {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: rgba(255,255,255,0.70);
}

.user-name {
    margin-top: 15rpx;
    font-size: 40rpx;
    color: #fff;
    width: 380rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.creation-info {
    font-size: 24rpx;
    color: #fff;
    margin-top: 1rpx;
}

.user-center-options {
    padding: 48rpx 48rpx 0 48rpx;
    border-radius: 40rpx 40rpx 0 0;
    width: 100%;
    background: #fff;
    box-sizing:border-box;
}

.operate {
    position: relative;
    box-sizing: border-box;
    padding-left: 80rpx;
    padding-right: 47rpx;
    height: 140rpx;
    line-height: 140rpx;
    width: 100%;
    font-size:32rpx;
    color:rgba(34,34,34,1);
}

.operate .left-icon {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    -webkit-transform: translateY(-50%);    
    display: inline-block;
    width: 44rpx;
    height: 44rpx;
    background-size:cover;
}

.operate .right-icon {
    position: absolute;
    right:0;
    top: 50%;
    transform: translateY(-50%);
    -webkit-transform: translateY(-50%);
    display: inline-block;
    width:44rpx;
    height:44rpx;
    background-size:cover;
}

.operate-name {
    height: 100%;
    line-height: 80rpx;    
}
