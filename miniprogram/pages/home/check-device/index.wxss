/* miniprogram/pages/home/check-device/index.wxss */
.container {
  padding-top: 30rpx;
  background: #f6f6f6;
  height: 100%;
  box-sizing: border-box;
}

.submit-scope {
  position: relative;
  padding-right: 41rpx;
  display: flex;
  align-items: center;
  font-size:28rpx;
  color: #555555;
}

.picker-select {
  height: 80rpx; 
}

.picker-view {
  width: 100%; 
  height: 421rpx;
  text-align:center;
  background: #fff; 
  color:#555555;
  font-size:32rpx;
}

.right-icon {
    position: absolute;
    top: 50%;
    right: 0;
    margin-top: -20rpx;
    width: 41rpx;
    height: 40rpx;
    background-size: cover;
}

.picker-header {
    display: flex;
    height: 96rpx;
    line-height: 96rpx;
    padding: 0 37rpx 0 43rpx;
    justify-content: space-between;
    font-size:28rpx;
    border-bottom: 1rpx solid #F3F3F3;
}

.picker-header view:nth-child(1) {
    color: #666666;
}

.picker-header view:nth-child(2) {
    color: #3164FF;
}

.item-desc {
  width: 70%;  
  font-size: 28rpx;
  color: #555;
  text-align: right;  
}

.right-text {
  font-size: 28rpx;
  color: #555555;
}

.form-title {
  position:relative;
  top:40rpx;
  left:48rpx;
  color: #888888;
  font-size: 26rpx;
}

.footer-btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #3164FF;
  box-shadow:0rpx 8rpx 20rpx 0rpx rgba(80,104,235,0.3);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
}
